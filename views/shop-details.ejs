                      <script>

                        const sizeXxl = document.getElementById("xxl")
                        const sizeXl = document.getElementById("xl")
                        const sizeL = document.getElementById("l")
                        const sizeS = document.getElementById("s")
                        
                        sizeXxl.addEventListener('click', ()=>{
                          document.getElementById("xxl_label").className = "active"
                          document.getElementById("xl_label").className = ""
                          document.getElementById("l_label").className = ""
                          document.getElementById("s_label").className = ""
                        })
                        sizeXl.addEventListener('click', ()=>{
                          document.getElementById("xxl_label").className = ""
                          document.getElementById("xl_label").className = "active"
                          document.getElementById("l_label").className = ""
                          document.getElementById("s_label").className = ""
