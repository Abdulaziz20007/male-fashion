<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header", {title: 'Sign In'}) %>
  <link rel="stylesheet" href="/css/sign.css" />
  <body>
    <%- include("partials/loader") %> <%- include("partials/navbar", {title:
    'Sign In'}) %>

    <section class="auth-container">
      <div class="container">
        <div class="auth-form">
          <div class="forms-container">
            <div class="signin-form">
              <div class="mobile-switch">
                <button onclick="toggleForm()">
                  Don't have an account? Sign Up
                </button>
              </div>
              <h2>Sign In</h2>
              <p>Welcome back! Please login to your account</p>
              <form onsubmit="handleAuth(event)" data-auth-type="login">
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    placeholder="Email Address"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <button type="submit" class="site-btn">Sign In</button>
              </form>
            </div>
            <div class="signup-form">
              <div class="mobile-switch">
                <button onclick="toggleForm()">
                  Already have an account? Sign In
                </button>
              </div>
              <h2>Create Account</h2>
              <p>Get started with your free account</p>
              <form onsubmit="handleAuth(event)" data-auth-type="register">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <input
                        type="text"
                        name="name"
                        placeholder="First Name"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <input
                        type="text"
                        name="surname"
                        placeholder="Last Name"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    placeholder="Email Address"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="tel"
                    name="phone"
                    placeholder="Phone Number"
                    required
                    pattern="[0-9]+"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="confirmPassword"
                    placeholder="Confirm Password"
                    required
                  />
                </div>
                <button type="submit" class="site-btn">Sign Up</button>
              </form>
            </div>
          </div>

          <div class="auth-switch">
            <div class="switch-icon">
              <i class="fa fa-user-plus"></i>
            </div>
            <div class="switch-text">Don't have an account?</div>
            <div class="switch-description">
              Join us to unlock exclusive features and personalized shopping
              experience
            </div>
            <button class="site-btn" onclick="toggleForm()">Sign Up</button>
          </div>
        </div>
      </div>
    </section>

    <%- include("partials/footer") %> <%- include("partials/search") %> <%-
    include("partials/jsplugins") %>

    <script src="/js/sign.js"></script>
  </body>
</html>
