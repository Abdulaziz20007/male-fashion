<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header", {title: 'Sign In'}) %>
  <body>
    <%- include("partials/loader") %> <%- include("partials/navbar", {title:
    'Sign In'}) %>

    <style>
      .auth-container {
        padding: 50px 0;
        background: #f3f2ee;
        min-height: 80vh;
        display: flex;
        align-items: center;
      }

      .auth-form {
        background: #fff;
        padding: 0;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
        display: flex;
        height: 700px;
      }

      .auth-form .forms-container {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
      }

      .auth-form .signin-form,
      .auth-form .signup-form {
        width: 50%;
        padding: 50px;
        opacity: 1;
        transition: opacity 0.6s ease-in-out;
      }

      .auth-form .signup-form {
        opacity: 0;
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
      }

      .auth-form .auth-switch {
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: #f3f2ee;
        padding: 50px 40px;
        color: #666;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        transition: transform 0.6s ease-in-out;
        z-index: 2;
      }

      .container {
        height: 100%;
        max-width: 1300px;
        width: 95%;
        margin: 0 auto;
      }

      .auth-form.active .signin-form {
        opacity: 0;
      }

      .auth-form.active .signup-form {
        opacity: 1;
      }

      .auth-form.active .auth-switch {
        transform: translateX(-100%);
      }

      .auth-form h2 {
        font-size: 36px;
        color: #111111;
        font-weight: 700;
        margin-bottom: 20px;
      }

      .auth-form p {
        font-size: 15px;
        color: #666;
        margin-bottom: 30px;
      }

      .auth-form .form-group {
        margin-bottom: 25px;
      }

      .auth-form input:not([type="checkbox"]) {
        width: 100%;
        height: 50px;
        border: 1px solid #e1e1e1;
        padding: 6px 20px;
        font-size: 15px;
        color: #666;
        border-radius: 5px;
        transition: all 0.3s;
      }

      .auth-form input:focus {
        border-color: #111;
      }

      .auth-form .site-btn {
        width: 100%;
        letter-spacing: 2px;
        padding: 14px 35px;
      }

      .auth-form .social-auth {
        margin-top: 30px;
        text-align: center;
      }

      .auth-form .social-auth a {
        display: inline-block;
        color: #666;
        font-size: 15px;
        padding: 12px 30px;
        border: 1px solid #e1e1e1;
        border-radius: 5px;
        margin: 0 10px;
        transition: all 0.3s;
      }

      .auth-form .social-auth a:hover {
        background: #111;
        color: #fff;
        border-color: #111;
      }

      .auth-form .form-footer {
        margin-top: 30px;
        text-align: center;
        color: #666;
      }

      .auth-form .form-footer a {
        color: #111;
        text-decoration: underline;
      }

      .auth-form .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
      }

      .auth-form .remember-forgot label {
        color: #666;
        cursor: pointer;
      }

      .auth-form .remember-forgot a {
        color: #111;
      }

      .site-btn {
        font-size: 14px;
        color: #ffffff;
        background: #111111;
        font-weight: 600;
        border: none;
        text-transform: uppercase;
        display: inline-block;
        padding: 12px 30px;
        border-radius: 5px;
        cursor: pointer;
      }

      .site-btn:hover {
        background: #333;
      }

      .auth-form .auth-switch::before {
        display: none;
      }

      .auth-form .auth-switch .switch-icon {
        margin-bottom: 20px;
        width: 60px;
        height: 60px;
        background: #111;
        border-radius: 50%;
        text-align: center;
        line-height: 60px;
      }

      .auth-form .auth-switch .switch-icon i {
        color: #fff;
        font-size: 24px;
      }

      .auth-form .auth-switch .switch-text {
        font-size: 16px;
        margin-bottom: 20px;
      }

      .auth-form .auth-switch .switch-description {
        color: #666;
        margin-bottom: 30px;
        line-height: 1.6;
      }

      .auth-form .auth-switch button {
        background: #111;
        color: #fff;
        border: none;
        padding: 12px 30px;
        border-radius: 5px;
        cursor: pointer;
      }

      .auth-form .auth-switch button:hover {
        background: #333;
      }

      @media (max-width: 768px) {
        .auth-container {
          padding: 40px 0;
          min-height: 100vh;
        }

        .auth-form {
          height: auto;
          margin: 15px;
          border-radius: 15px;
          perspective: 1000px;
        }

        .auth-form .forms-container {
          position: relative;
          width: 100%;
          min-height: 700px;
          transition: transform 0.6s;
          transform-style: preserve-3d;
        }

        .auth-form.active .forms-container {
          transform: rotateY(180deg);
        }

        .auth-form .signin-form,
        .auth-form .signup-form {
          width: 100%;
          padding: 30px 20px;
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          backface-visibility: hidden;
          background: #fff;
          border-radius: 15px;
        }

        .auth-form .signup-form {
          transform: rotateY(180deg);
          display: block;
          opacity: 1;
        }

        .auth-form .mobile-switch {
          display: block;
          text-align: center;
          margin-bottom: 20px;
        }

        .auth-form .mobile-switch button {
          background: none;
          border: none;
          color: #111;
          font-weight: 600;
          cursor: pointer;
          padding: 10px 20px;
          font-size: 14px;
          text-transform: uppercase;
          letter-spacing: 1px;
        }

        .auth-form .mobile-switch button:hover {
          color: #333;
        }

        .auth-form .auth-switch {
          display: none;
        }

        .auth-form .auth-switch .switch-icon {
          width: 50px;
          height: 50px;
          line-height: 50px;
          margin-bottom: 15px;
        }

        .auth-form .auth-switch .switch-icon i {
          font-size: 20px;
        }

        .auth-form .auth-switch .switch-text {
          font-size: 15px;
          margin-bottom: 15px;
        }

        .auth-form .auth-switch .switch-description {
          font-size: 14px;
          margin-bottom: 20px;
          padding: 0 15px;
        }

        .auth-form .row {
          margin: 0 -10px;
        }

        .auth-form .col-md-6 {
          padding: 0 10px;
        }

        .auth-form .social-auth {
          display: flex;
          flex-direction: column;
          gap: 10px;
        }

        .auth-form .social-auth a {
          margin: 0;
        }

        .auth-form .remember-forgot {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }

        .auth-form .form-group {
          margin-bottom: 15px;
        }

        .auth-form input:not([type="checkbox"]) {
          height: 45px;
        }

        .site-btn {
          padding: 10px 25px;
        }
      }

      /* Additional styles for even smaller screens */
      @media (max-width: 480px) {
        .auth-container {
          padding: 20px 0;
        }

        .auth-form {
          margin: 10px;
        }

        .auth-form .signin-form,
        .auth-form .signup-form {
          padding: 20px 15px;
        }

        .auth-form h2 {
          font-size: 24px;
          margin-bottom: 15px;
        }

        .auth-form p {
          font-size: 14px;
          margin-bottom: 20px;
        }
      }

      /* Hide the form footer on main form since we moved it to the top right */
      .signin-form .form-footer {
        display: none;
      }

      /* Only show form footer on signup form */
      #signup-form .form-footer {
        display: block;
      }

      /* Adjust form width to account for the switch text */
      .auth-form form {
        max-width: 90%;
      }

      /* Hide mobile-switch by default (desktop) */
      .auth-form .mobile-switch {
        display: none;
      }

      @media (max-width: 768px) {
        /* Show mobile-switch only on mobile */
        .auth-form .mobile-switch {
          display: block;
          text-align: center;
          margin-bottom: 20px;
        }
      }
    </style>

    <section class="auth-container">
      <div class="container">
        <div class="auth-form">
          <div class="forms-container">
            <div class="signin-form">
              <div class="mobile-switch">
                <button onclick="toggleForm()">
                  Don't have an account? Sign Up
                </button>
              </div>
              <h2>Sign In</h2>
              <p>Welcome back! Please login to your account</p>
              <form action="/auth/login" method="POST">
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    placeholder="Email Address"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="remember-forgot">
                  <label> <input type="checkbox" /> Remember me </label>
                  <a href="/forgot-password">Forgot Password?</a>
                </div>
                <button type="submit" class="site-btn">Sign In</button>
              </form>
            </div>
            <div class="signup-form">
              <div class="mobile-switch">
                <button onclick="toggleForm()">
                  Already have an account? Sign In
                </button>
              </div>
              <h2>Create Account</h2>
              <p>Get started with your free account</p>
              <form action="/auth/register" method="POST">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <input
                        type="text"
                        name="name"
                        placeholder="First Name"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <input
                        type="text"
                        name="surname"
                        placeholder="Last Name"
                      />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    placeholder="Email Address"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="tel"
                    name="phone"
                    placeholder="Phone Number"
                    required
                    pattern="[0-9]+"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="confirmPassword"
                    placeholder="Confirm Password"
                    required
                  />
                </div>
                <button type="submit" class="site-btn">Sign Up</button>
              </form>
            </div>
          </div>

          <div class="auth-switch">
            <div class="switch-icon">
              <i class="fa fa-user-plus"></i>
            </div>
            <div class="switch-text">Don't have an account?</div>
            <div class="switch-description">
              Join us to unlock exclusive features and personalized shopping
              experience
            </div>
            <button class="site-btn" onclick="toggleForm()">Sign Up</button>
          </div>
        </div>
      </div>
    </section>

    <%- include("partials/footer") %> <%- include("partials/search") %> <%-
    include("partials/jsplugins") %>

    <script>
      function toggleForm() {
        const authForm = document.querySelector(".auth-form");
        const authSwitch = document.querySelector(".auth-switch");

        if (window.innerWidth <= 768) {
          authForm.classList.toggle("active");
        } else {
          const switchIcon = authSwitch.querySelector(".switch-icon i");
          const switchText = authSwitch.querySelector(".switch-text");
          const switchDescription = authSwitch.querySelector(
            ".switch-description"
          );
          const switchButton = authSwitch.querySelector(".site-btn");

          authForm.classList.toggle("active");

          if (authForm.classList.contains("active")) {
            switchIcon.className = "fa fa-sign-in";
            switchText.textContent = "Already have an account?";
            switchDescription.textContent =
              "Sign in to access your existing account and continue shopping";
            switchButton.textContent = "Sign In";
          } else {
            switchIcon.className = "fa fa-user-plus";
            switchText.textContent = "Don't have an account?";
            switchDescription.textContent =
              "Join us to unlock exclusive features and personalized shopping experience";
            switchButton.textContent = "Sign Up";
          }
        }
      }
    </script>
  </body>
</html>
